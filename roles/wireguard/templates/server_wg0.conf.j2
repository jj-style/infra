[Interface]
Address = {{ wireguard.server.address }}
{% if wireguard.server.post_up is defined %}
PostUp = {{ wireguard.server.post_up }}
{% endif %}
{% if wireguard.server.post_down is defined %}
PostDown = {{ wireguard.server.post_down }}
{% endif %}
{% if wireguard.server.port is defined %}
ListenPort = {{ wireguard.server.port }}
{% endif %}
PrivateKey = {{ wireguard.server.private_key }}

{% for peer in wireguard.peers %}
[Peer]
# {{ peer.name }}
PublicKey = {{ peer.public_key }}
AllowedIPs = {{ peer.allowed_ips }}
{% if peer.endpoint is defined %}
Endpoint = {{ peer.endpoint }}
{% endif %}
{% if peer.persistent_keepalive is defined %}
PersistentKeepalive = {{ peer.persistent_keepalive }}
{% endif %}
{% endfor %}
